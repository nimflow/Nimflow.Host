    "ApplicationName": "Nimflow.Hub",
    "ConnectionString": "mongodb://localhost",
    "DatabaseName": "sfhub"
  },
  "FunctionModules": {
    "Http": {
      "Type": "Http",
      "Settings": {
        "BaseAddress": "",
        "RequirePermissions": [],
        "DefaultRequestHeaders": [
          {
            "name": "application",
            "value": "nimFlow-Hub"
          }
        ]
      }
    }
  },
  "ContextTypes": {
    "DisableRecalculationOnUpdate": false
